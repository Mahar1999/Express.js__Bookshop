<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/index/index.css" />
    <link rel="stylesheet" href="/orders/orders.css" />
    </head>

    <body>

        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if(orders.length <=0 ){ %>
                    <div class="notFound">
                        <p> No Orders Available !!! </p>
                    </div>
                <% }else{ %> 
                    <ul class="orders__list">
                        <% orders.forEach(order => { %> 
                            <li class="order"> 
                                <h1 class="order__heading">Order ID : &nbsp;<%= order.id %></h1>
                                <ul class="order__list">
                                   <% order.books.forEach(item => { %>
                                    <li class="order__list-item"> <%= item.title %> ( <%= item.orderItem.dataValues.quantity %>  ) - <a href='/orders/<%=order.id%>'>Invoice</a></li>
                                    <% }) %>
                                </ul>
                            </li>    
                        <% }) %>
                    </ul>
                <% } %>
            </main>
        <%- include('../includes/end.ejs') %>